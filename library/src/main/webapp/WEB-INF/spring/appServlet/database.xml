<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<bean id="mydataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName">
			<value>${jdbc.driverClassName}</value>
		</property>
		<property name="url">
			<value>${jdbc.url}</value>
		</property>
		<property name="username">
			<value>${jdbc.username}</value>
		</property>
		<property name="password">
			<value>${jdbc.password}</value>
		</property>
	</bean>
	<bean id="BooksJoinLendingsAndUsersDao" class="com.manage.library.dao.BooksJoinLendingsAndUsersDaoImpl">
		<property name="dataSource" ref="mydataSource"></property>
	</bean>
	<bean id="LendedHistorysJoinUsersdao" class="com.manage.library.dao.LendedHistorysJoinUsersDaoImpl">
		<property name="dataSource" ref="mydataSource"></property>
	</bean>
	<bean id="BooksDao" class="com.manage.library.dao.BooksDaoImpl">
		<property name="dataSource" ref="mydataSource"></property>
	</bean>
	<bean id="LendingsDao" class="com.manage.library.dao.LendingsDaoImpl">
		<property name="dataSource" ref="mydataSource"></property>
	</bean>
	<bean id="LendedHistorysDao" class="com.manage.library.dao.LendedHistorysDaoImpl">
		<property name="dataSource" ref="mydataSource"></property>
	</bean>
	<bean id="UsersDao" class="com.manage.library.dao.UsersDaoImpl">
		<property name="dataSource" ref="mydataSource"></property>
	</bean>
</beans>